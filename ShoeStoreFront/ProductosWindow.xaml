<Window x:Class="ShoeStoreFront.ProductosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeStoreFront"
        mc:Ignorable="d"
        Title="ProductosWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dtgProd" Grid.Column="1" AutoGenerateColumns="True" Grid.RowSpan="2"/>
        <TreeView x:Name="treeViewCategorias" Grid.Column="0" SelectedItemChanged="treeViewCategorias_SelectedItemChanged"/>
        
    </Grid>
</Window>
