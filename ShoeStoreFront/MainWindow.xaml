<Window x:Class="ShoeStoreFront.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeStoreFront"
        mc:Ignorable="d" Height="450" Width="800"
        Background="#f0f0f0"
        Title="Login">
    <Window.Resources>
        <ResourceDictionary Source="WindowResources.xaml"/>
    </Window.Resources>
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20">
            <StackPanel>
                <TextBlock Text="Login" FontSize="24" FontWeight="Bold" Foreground="#007ACC" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Username" FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5"/>
                <TextBox x:Name="txbUsr" Text="bcristea" Height="30" Margin="0,0,0,20" Padding="5" BorderThickness="1"/>

                <TextBlock Text="Password" FontSize="14" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txbPasw" Password="temp" Height="30" Margin="0,0,0,20" Padding="5" BorderThickness="1"/>

                <Button x:Name="btnLogin" Content="Login" Click="btnLogin_Click" Height="35" FontWeight="Bold" BorderBrush="Transparent" Margin="0,0,0,10"/>
                <Button Content="Cancel" Click="btnCancel_Click" Height="35" Background="Gray" Foreground="White"  Margin="0,0,0,10" FontWeight="Bold" BorderBrush="Transparent"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
